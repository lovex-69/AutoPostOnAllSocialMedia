# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/execution_posting

# ─── Gemini (optional — not currently used) ───────────────────────────────────
GEMINI_API_KEY=

# ─── LinkedIn ─────────────────────────────────────────────────────────────────
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_ORG_ID=# For personal posting ("Share on LinkedIn" product) — leave ORG_ID empty
LINKEDIN_PERSON_URN=
# ─── Meta / Instagram ────────────────────────────────────────────────────────
META_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ID=
FACEBOOK_PAGE_ID=

# ─── YouTube ──────────────────────────────────────────────────────────────────
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_TRANSFORM_VIDEO=true

# ─── Supabase Storage (royalty-free music for YouTube) ────────────────────────
# Upload MP3/WAV files to a 'music' bucket in Supabase Storage.
# The system will randomly pick one for each YouTube upload to avoid copyright.
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_MUSIC_BUCKET=music

# ─── X (Twitter) ──────────────────────────────────────────────────────────────
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# ─── Auth ───────────────────────────────────────────────────────────────────────
APP_SECRET_KEY=change-me-to-a-strong-random-string

# ─── Frontend (Vercel URL — for CORS) ────────────────────────────────────────
FRONTEND_URL=*

# ─── Scheduler ────────────────────────────────────────────────────────────────
SCHEDULER_INTERVAL_MINUTES=5

# ─── Retry ────────────────────────────────────────────────────────────────────
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=2
# ─── Notifications (optional) ────────────────────────────────────────────────────
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=